!!! doctype
html
    head
        meta(charset="utf-8")
        title #{title}

        - if (typeof isIndex !== "undefined")
            hrefPrefix = "assets"
        - else
            hrefPrefix = "../assets"
        link(rel="stylesheet", type="text/css", href="#{hrefPrefix}/vendor/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet", type="text/css", href="#{hrefPrefix}/css/main.css")
        link(rel="shortcut icon", href="#{hrefPrefix}/favicon.ico", type="images/x-icon")
    body
        div.navbar.navbar-fixed-top.navbar-inverse
            div.navbar-inner
                div.container
                    ul.nav
                        li.active
                            a(href="/") Home
        div.container#main
            div.row
                div.wrap
                    !{content}

                    ul.pager
                        -if (typeof prev !== "undefined")
                            li.previous
                                a(href="#{prev}") &larr; 上一页

                        -if (typeof next !== "undefined")
                            li.next
                                a(href="#{next}") 下一页 &rarr;
